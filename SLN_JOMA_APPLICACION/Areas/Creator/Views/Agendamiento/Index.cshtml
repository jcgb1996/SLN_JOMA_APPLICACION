<style>
    /* Estilo para los círculos de color */
    .color-circle {
        display: inline-block;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin-right: 8px;
    }

    /* Ajuste para la clase bg-purple */
    .bg-purple {
        background-color: #6f42c1; /* Color púrpura de Bootstrap */
    }

</style>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="pt-4 pb-2">
                        <h5 class="card-title text-center pb-0 fs-4">Agendamiento citas</h5>
                        <p class="text-center small">Ingrese los datos</p>
                    </div>

                    <!-- Floating Labels Form -->
                    <form class="row g-3" id="FrmCitas">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="CheckTodoElDia">
                                <label class="form-check-label" for="CheckTodoElDia">
                                    Es todo el día
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="dropdown" id="">
                                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categoría: ninguna
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="#" data-value="alta">
                                            <span class="color-circle bg-danger"></span> Alta - Categoría Roja
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="#" data-value="media">
                                            <span class="color-circle bg-warning"></span> Media - Categoría Naranja
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="#" data-value="baja">
                                            <span class="color-circle bg-primary"></span> Baja - Categoría Azul
                                        </a>
                                    </li>
                                </ul>
                            </div>

                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Titulo de la cita o reunion" required>
                                <label for="floatingName">Titulo</label>
                                <div class="invalid-feedback">Ingresse un titulo!</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select class="form-select" id="floatingSelect" aria-label="State" required>
                                    <option value="1">Usuario 1</option>
                                    <option value="2">Usuario 2</option>
                                    <option value="3">Usuario 3</option>
                                </select>
                                <label for="floatingSelect">Usuario</label>
                                <div class="invalid-feedback">Seleccione un usuario!</div>
                            </div>
                        </div>



                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="date" class="form-control" placeholder="Fecha nacimiento" id="floatingInicio" required>
                                <label for="floatingInicio">Fecha Inicio</label>
                                <div class="invalid-feedback">Seleccione la fecha de Inicio!</div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="time" class="form-control" placeholder="Hora de Inicio" id="HoraInicio" required>
                                <label for="HoraInicio" class="form-label">Hora de Inicio</label>
                                <div class="invalid-feedback">Seleccione la hora de Inicio!</div>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="date" class="form-control" placeholder="Fecha nacimiento" id="floatingFin" required>
                                <label for="floatingFin">Fecha Fin</label>
                                <div class="invalid-feedback">Seleccione la fecha de Inicio!</div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="time" class="form-control" placeholder="Hora Fin" id="HoraFin" required>
                                <label for="HoraFin" class="form-label">Hora de Fin</label>
                                <div class="invalid-feedback">Seleccione la hora de Fin!</div>
                            </div>
                        </div>



                        <div class="col-md-12">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Detalle de la reunion" id="floatingDetalleReunion" style="height: 100px;"></textarea>
                                <label for="floatingDetalleReunion">Detalle de la reunion</label>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="button" onclick="Agendamiento.GuardarCitas(event);;" class="btn btn-primary">Guardar</button>
                            <button type="button" onclick='Site.limpiarFormularioById("FrmCitas");' class="btn btn-secondary">Cancelar</button>
                        </div>
                    </form><!-- End floating Labels Form -->

                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/creator/citas.js"></script>
<script>
    $(document).ready(function () {
        Agendamiento.Init();
    });

</script>