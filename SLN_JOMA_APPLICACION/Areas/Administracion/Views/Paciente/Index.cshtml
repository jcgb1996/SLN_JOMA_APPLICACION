@using COM.JOMA.EMP.APLICACION.SERVICE.Constants
@using COM.JOMA.EMP.QUERY.Dtos
@{
    var Controller = $"{WebSiteConstans.JOMA_WEBSITE_AREA_ADMINISTRACION}/{WebSiteConstans.JOMA_WEBSITE_AREA_CONTROLLER_PACIENTES}";
    var jsonCmbEstado = string.Empty;
    var CmbEstado = ViewData["CmbEstado"] as List<(string Description, int Value)>;
    if (CmbEstado != null) jsonCmbEstado = Newtonsoft.Json.JsonConvert.SerializeObject(CmbEstado);
}


<style>
    .table td {
        padding: 5px !important; /* Elimina el padding de las celdas */
    }
    .select2-selection, .select2-selection {
        height: 56px !important; /* Ajusta según el tamaño deseado */
    }

    table#DataTablePacientes td {
        font-size: 11px !important;
        padding: 5px 8px !important;
        vertical-align: middle !important;
    }
</style>

<section class="section">
    <div id="ContenteModal">
        @await Html.PartialAsync("ModalPacientePartialView", new PacientesQueryDto())
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">

                <div class="card-body">

                    <h1 class="card-title text-center pb-0 fs-8">Pacientes</h1>
                    <p class="text-center fw-medium">Pacientes Registrados</p>
                    <table id="DataTablePacientes" class="table table-striped table-bordered w-100" style="width:100%">
                        <thead>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/Administracion/Paciente.js"></script>
@{

    if (!string.IsNullOrEmpty(jsonCmbEstado))
    {
        <script type="text/javascript">
            Paciente.CmbEstado = @Html.Raw(jsonCmbEstado);
            Paciente.CmbEstado = Paciente.CmbEstado.map(function (item) {
                return {
                    id: item.Item2 == 0 ? 99 : item.Item2,
                    text: item.Item1
                };
            });
        </script>
    }
}
<script>
    Paciente.Init('@Url.Content("~/")', '@Controller');
</script>
