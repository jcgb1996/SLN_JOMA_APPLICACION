@using COM.JOMA.EMP.APLICACION.Dto
@using COM.JOMA.EMP.APLICACION.SERVICE.Constants
@{
    var AccionCardsClientes = $"../{WebSiteConstans.JOMA_WEBSITE_AREA_CONSULTAS_REPORTES}/{WebSiteConstans.JOMA_WEBSITE_AREA_CONTROLLER_INTERESADOS}/{WebSiteConstans.JOMA_WEBSITE_ACCION_INDEX}";
    var AccionCardsPacientes = $"../{WebSiteConstans.JOMA_WEBSITE_AREA_CONSULTAS_REPORTES}/{WebSiteConstans.JOMA_WEBSITE_AREA_CONTROLLER_PACIENTES}/{WebSiteConstans.JOMA_WEBSITE_ACCION_INDEX}";
    var AccionCardsTerapistas = $"../{WebSiteConstans.JOMA_WEBSITE_AREA_CONSULTAS_REPORTES}/{WebSiteConstans.JOMA_WEBSITE_AREA_CONTROLLER_TERAPISTAS}/{WebSiteConstans.JOMA_WEBSITE_ACCION_INDEX}";
}

<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-12">
            <div class="row">
                <!--  Owl carousel -->
                <div class="col-xxl-3 col-xl-12">
                    <div class="card border-0 zoom-in bg-primary-subtle shadow-none" style="cursor:  pointer" onclick="Site.RenderContent('@AccionCardsTerapistas');">
                        <div class="card-body">
                            <div class="text-center">
                                <img src="~/assets/images/svgs/icon-user-male.svg" width="50" height="50" class="mb-3" alt="modernize-img" />
                                <p class="fw-semibold fs-3 text-primary mb-1">
                                    Terapistas
                                </p>
                                <h5 class="fw-semibold text-primary mb-0">10</h5>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-3 col-xl-12">
                    <div class="card border-0 zoom-in bg-warning-subtle shadow-none" style="cursor:  pointer" onclick="Site.RenderContent('@AccionCardsClientes');">
                        <div class="card-body">
                            <div class="text-center">
                                <img src="~/assets/images/svgs/icon-briefcase.svg" width="50" height="50" class="mb-3" alt="modernize-img" />
                                <p class="fw-semibold fs-3 text-warning mb-1">Clientes</p>
                                <h5 class="fw-semibold text-warning mb-0">20</h5>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-3 col-xl-12">
                    <div class="card border-0 zoom-in bg-danger-subtle shadow-none" style="cursor:  pointer">
                        <div class="card-body">
                            <div class="text-center">
                                <img src="~/assets/images/svgs/icon-favorites.svg" width="50" height="50" class="mb-3" alt="modernize-img" />
                                <p class="fw-semibold fs-3 text-danger mb-1">Agenda</p>
                                <h5 class="fw-semibold text-danger mb-0">6</h5>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-3 col-xl-12">
                    <div class="card border-0 zoom-in bg-info-subtle shadow-none" onclick="Site.RenderContent('@AccionCardsPacientes');">
                        <div class="card-body">
                            <div class="text-center">
                                <img src="~/assets/images/svgs/icon-connect.svg" width="50" height="50" class="mb-3" alt="modernize-img" />
                                <p class="fw-semibold fs-3 text-info mb-1">Pacientes</p>
                                <h5 class="fw-semibold text-info mb-0">10</h5>
                            </div>
                        </div>
                    </div>
                </div>
                <!--  Row 1 -->
                <div class="row">
                    <div class="col-lg-12 d-flex align-items-stretch flex-column">
                        <!-- Yearly Breakup -->
                        <div class="card w-100">
                            <div class="card-body">
                                <div class="row align-items-center">

                                    <div class="col-12">
                                        <div class="d-flex justify-content-center">
                                            <div id="breakup"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<script src="~/js/inicio/dashboard.js"></script>
<script>
    $(document).ready(function () {
        Dashboard.Init();
    });

</script>
